@using Core.Models
@model Team
<div class="container">
    <div class="row">
        <div class="col-12">
            <form asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputEmail1">FullName</label>
                    <input asp-for="FullName" class="form-control" id="exampleInputEmail1" placeholder="Enter Fullname">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Designation</label>
                    <input asp-for="Designation" class="form-control" id="exampleInputEmail1" placeholder="Enter Designation">
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Description</label>
                    <input asp-for="Description" class="form-control" id="exampleInputEmail1" placeholder="Enter Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">TwittlerLink</label>
                    <input asp-for="TwittlerLink" class="form-control" id="exampleInputEmail1" placeholder="Enter TwittlerLink">
                    <span asp-validation-for="TwittlerLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">InstagramLink</label>
                    <input asp-for="InstagramLink" class="form-control" id="exampleInputEmail1" placeholder="Enter InstagramLink">
                    <span asp-validation-for="InstagramLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">FacebookLink</label>
                    <input asp-for="FacebookLink" class="form-control" id="exampleInputEmail1" placeholder="Enter FacebookLink">
                    <span asp-validation-for="FacebookLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">LinkedinLink</label>
                    <input asp-for="LinkedinLink" class="form-control" id="exampleInputEmail1" placeholder="Enter LinkedinLink">
                    <span asp-validation-for="LinkedinLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control" id="exampleInputEmail1">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                
            </form>
        </div>
    </div>
</div>